<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_linear_album"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_album_exp4" />

    <TextView
        android:id="@+id/txt_title_album"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_linear_album"
        app:layout_constraintTop_toTopOf="@+id/img_linear_album" />

    <TextView
        android:id="@+id/txt_singer_album"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Singer"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_linear_album"
        app:layout_constraintStart_toStartOf="@+id/txt_title_album"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_album" />

</androidx.constraintlayout.widget.ConstraintLayout>